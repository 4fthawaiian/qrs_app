extends layout

block content
  div#main.container.text-responsive
    img(src="/images/box.svg" height="100em" width="100em" style="display: inline")
    h1(style="display: inline") #{title} 
    hr
    each box in boxes
      div.row.flex-wrap
        div.col-auto
          img(src="/images/box.svg" height="50em" width="50em")
        div.col-auto
          a(href='/?code='+box.value.index) box #{box.value.index}
        div.col #{box.title}
